<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".home2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_image"
        android:text="Choose File"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_image"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="264dp"
        android:layout_toEndOf="@id/btn_image"
        android:hint="title" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_view"
        android:layout_below="@id/title"
        android:layout_above="@id/progressbar"
        android:layout_marginTop="15dp"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_upload"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="Upload"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_upload"
        android:layout_alignBaseline="@id/btn_upload"
        android:layout_marginStart="25dp"
        android:id="@+id/textHome"
        android:layout_toEndOf="@id/btn_upload"
        android:text="Home"
        android:textSize="16sp"
        android:gravity="center"/>


</RelativeLayout>